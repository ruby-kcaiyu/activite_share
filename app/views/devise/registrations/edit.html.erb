<div class="message">
<div class="container">
<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f| %>
  <div class="col-md-7 col-md-offset-3">
    <fieldset>
      <legend>更改注册信息</legend>
       <div class="dan">
        <%= devise_error_messages! %>
        <form class="form-horizontal">
	  <div class="row">
	    <div class="col-sm-2">
	    <%=f.label :username%>
	    </div>
	    <div class="col-sm-5">
	    <%=f.text_field :username,:presence=>true,class: "form-control input-default"%>
 	    </div>
	  </div></br>
          <div class="row">
	    <div class="col-sm-2">
	    <%= f.label :email %>
	    </div>
	    <div class="col-sm-5" >
  	    <%= f.email_field :email, :autofocus => true,class: "form-control input-default" %>
	    </div>
	  </div><br>
	  
  	  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    	  <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  	  <% end %>
	  <div class="row">
	    <div class="col-sm-2">
            <%= f.label :password %> 
	    </div>
	    <div class="col-sm-5">
  		<%= f.password_field :password, :autocomplete => "off",class: "form-control input-default" %>
	      <h5>如果不想改变，留下空白</h5>
	    </div>
	  </div><br>
	  <div class="row">
	    <div class="col-sm-2">
	    <%= f.label :password_confirmation %>
	    </div>
	    <div class="col-sm-5">
	    <%= f.password_field :password_confirmation , class: "form-control input-default"%>
	    </div>
	  </div><br>	
	  <div class="row">
	    <div class="col-sm-2">
  	    <%= f.label :current_password %> 
	    </div>
	    <div class="col-sm-5">
  	    <%= f.password_field :current_password ,class: "form-control input-default"%>
	    <h5>需要输入现在的密码确认</h5>
	    </div>
	  </div>
	  </div>
  </fieldset><br>
  <div class="alter">
    <div class="col-md-offset-3"> 
    <br><%= f.submit "修改" ,class: "btn btn-primary"%>
    </div>
  </div>
<% end %>
  
  <div class="delect">
   <h4>删除帐号</h4>
   <h5>删除帐号会删除所有关联的个人资料，并且操作无法恢复</h5>
   <%= button_to "删除帐号", registration_path(resource_name), :data => { :confirm => "你确定要删除此帐号吗？" }, :method => :delete ,class: "btn btn-danger"%>
  </div>	   
  <div class="return">
 <strong> <%= link_to "返 回", :back %></strong>
  </div>
</div>
</div>
