<div class="header">
  <div class="container">
    <div class="form-inline">
	<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
	  <div class="form-group">
	    <div> <%= f.email_field :email, :autofocus => true ,placeholder: "Email",class: "form-control input-sm"%></div>
	  </div>
	  <div class="form-group">
	    <div> <%= f.password_field :password,placeholder: "Password",class: "form-control input-sm" %></div>
	  </div>
 	  <div class="form-group">
  		  <% if devise_mapping.rememberable? -%>
    			<div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
  		  <% end -%>
	  </div>
	  <div class="form-group">
  	    <div><%= f.submit "Sign in",class: "btn btn-xs btn-info" %></div>
	  </div>
        <% end %>
      </form>
    </div>
  </div>
</div>
<div class="container">
  <div class="row">
    <div class="col-md-4">
      <P>感谢你的光临，全心全意为您服务</p>
    </div>
    <div class="col-md-4 col-md-offset-4">
      <h2>Sign up</h2>

      <%= form_for(User.new, :as => resource_name, :url =>user_registration_path) do |f| %>
         <div><%= f.email_field :email,   placeholder: " Email",class: "form-control"%></div><br>
         <div><%=f.password_field :password, placeholder: "  Password",class: "form-control" %></div><br>
         <div><%= f.password_field :password_confirmation, placeholder: "  Password_confirmation" ,class: "form-control"%></div><br>
              <%= f.submit "Sign up" ,class: "btn btn-block btn-default btn-primary"%>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
 
