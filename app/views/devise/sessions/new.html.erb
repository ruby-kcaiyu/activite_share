<div class="header">
  <div class="container">
    <div class="form-inline">
      <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
        <div class="form-group">
	  <div> <%= f.email_field :email, :autofocus => true ,placeholder: "Email地址",class: "form-control input-sm"%></div>
	</div>
	<div class="form-group">
 	  <div> <%= f.password_field :password,placeholder: "密  码",class: "form-control input-sm" %></div>
	</div>
 	<div class="form-group">
  		<% if devise_mapping.rememberable? -%>
    		<div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
  		<% end -%>
	</div>
	  <div class="form-group">
  	    <div><%= f.submit "登 录",class: "btn btn-xs btn-info" %></div>
	  </div>
        <% end %>
      </form>
    </div>    
  </div>	
</div> 
<div class="container">
 <div class="row">
  <div class="col-md-4 ">
    <p>撒旦哦好撒旦阿卡读取行啊客户端放到空间阿飞</p>
  </div>
  <div class="col-md-4 col-md-offset-4">
  <h2>注    册</h2>

      <%= form_for(User.new, :as => resource_name, :url => user_registration_path) do |f| %>
      <%=devise_error_messages!%>
         <div><%=f.text_field :username, placeholder:"用户名",class: "form-control"%></div><br>
         <div><%=f.email_field :email,   placeholder: " Email地址",class: "form-control"%></div><br>
         <div><%=f.password_field :password, placeholder: "密      码",class: "form-control" %></div><br>
         <div><%= f.password_field :password_confirmation, placeholder: "确认密码" ,class: "form-control"%></div><br>
              <%= f.submit "注  册" ,class: "btn btn-block btn-default btn-primary"%>
      <% end %>
      <%= render "devise/shared/links" %>
  </div>
 </div>
</div>
